{
	"sap.app": {
		"type": "card"
	},
	"sap.card": {
		"type": "List",
		"header": {
			"type": "Numeric",
			"data": {
				"request": {
					"url": "./cardcontent/delayedLoading/listData1.json"
				},
				"path": "/header"
			},
			"title": "{title}",
			"subTitle": "{subTitle}",
			"mainIndicator": {
				"number": "{mainIndicator/number}"
			}
		},
		"content": {
			"data": {
				"request": {
					"url": "./cardcontent/delayedLoading/listData1.json"
				},
				"path": "/content"
			},
			"maxItems": 3,
			"item": {
				"title": {
					"label": "{{title_label}}",
					"value": "{Name}"
				},
				"description": {
					"label": "{{description_label}}",
					"value": "{Description}"
				},
				"highlight": "{state}",
				"info": {
					"value": "{info}",
					"state": "{infoState}"
				}
			}
		}
	}
}